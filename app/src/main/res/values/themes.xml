<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Investimento" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="cardViewStyle">@style/TemaCardModedas</item>
        <item name="editTextStyle">@style/TemaEditTextCambio</item>
    </style>

    <style name="TemaCardModedas" parent="CardView" >
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="android:foreground">@drawable/card_moedas</item>
    </style>

    <style name="TemaEditTextCambio" parent="Widget.AppCompat.EditText" >
        <item name="background">@android:color/transparent</item>
        <item name="android:foreground">@drawable/edit_text_moedas</item>
    </style>

    <style name="TemaButtonCambio" parent="Theme.Investimento">
        <item name="colorPrimary">@color/azul</item>
    </style>

    <style name="TemaButtonToolBar" parent="Theme.Investimento">
        <item name="colorPrimary">@color/white</item>
    </style>



</resources>